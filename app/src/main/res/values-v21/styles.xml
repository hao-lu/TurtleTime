<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Light overall theme with dark action bar (white text in the action bar) -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        !-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">#ABA0D0</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">#AB8BD0</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">#3F3F3F</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:colorButtonNormal">#ABA0D0</item>

        <!-- For the ripple effect-->
        <item name="android:colorControlHighlight">@color/colorHighlight</item>



    </style>

</resources>
