<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/date_1a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_column="5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_column="8"
                android:text="       " />

            <TextView
                android:id="@+id/time_1a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_column="10" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/date_1b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_column="5" />

            <TextView
                android:id="@+id/time_1b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_column="10" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/date_2a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:textSize="20sp"
                android:layout_column="5" />

            <TextView
                android:id="@+id/time_2a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_column="10" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/date_2b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                android:textSize="20sp"
                android:layout_column="5" />

            <TextView
                android:id="@+id/time_2b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_column="10" />
        </TableRow>


    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/custom_bg"
        android:clickable="true">

        <Button
            android:id="@+id/set_reminder_button"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:text="@string/set_reminder_text_button"
            android:visibility="gone"
            android:enabled="false" />

        <Button
            android:id="@+id/show_next_alarm"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:text="Cancel alarms"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/set_alarm_image_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/set_alarm_icon"
            android:scaleType="centerCrop"
            android:background="#00ffffff" />


    </LinearLayout>

</LinearLayout>
